@page
@model MusicModel
@{
    ViewData["Title"] = "Music";
}

<h1>@Model.Message</h1>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Album</th>
        <th scope="col">Artist</th>
        <th scope="col">Year</th>
        <th scope="col">Genre</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var song in Model.MusicList) {
    <tr>
        <td>@song.Id</td>
        <td>@song.Name</td>
        <td>@song.Album</td>
        <td>@song.Artist</td>
        <td>@song.Year</td>
        <td>@song.Genre</td>
        <td>
            <form method="post">
                <input type="hidden" class="form-control" name="songId" value="@song.Id">
                <button type="submit">Delete</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>